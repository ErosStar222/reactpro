{
  "name": "rempl",
  "version": "1.0.0",
  "description": "Remote platform",
  "main": "index.js",
  "author": "Roman Dvornov",
  "repository": "lahmatiy/rempl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lahmatiy/rempl/issues"
  },
  "homepage": "https://github.com/lahmatiy/rempl",
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-duplicate-case": 2,
      "no-undef": 2,
      "no-unused-vars": [2, {"vars": "all", "args": "after-used"}]
    }
  },
  "main": "src/index.js",
  "scripts": {
    "codestyle": "jscs src && eslint src",
    "build:observer-browser": "browserify --standalone rempl src/observer/browser/index.js > dist/rempl-observer-browser.js",
    "build:event": "browserify --standalone DomEventTransport src/utils/DomEventTransport.js > dist/rempl-dom-event-transport.js",
    "build:observer-nodejs": "browserify --standalone rempl src/observer/nodejs/index.js | uglifyjs --compress --mangle -o dist/rempl-observer-nodejs.js",
    "build:observer": "browserify --standalone rempl src/observer/index.js | uglifyjs --compress --mangle -o dist/rempl-observer.js"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "eslint": "^2.13.1",
    "jscs": "~3.0.7",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "socket.io-client": "^1.7.1"
  }
}
